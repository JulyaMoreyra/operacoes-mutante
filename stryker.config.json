{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "_comment": "Configuração ajustada para evitar loops infinitos e controlar timeouts de mutantes.",
  "packageManager": "npm",
  "reporters": [
    "html",
    "clear-text",
    "progress"
  ],
  "testRunner": "jest",
  "testRunner_comment": "Veja mais em: https://stryker-mutator.io/docs/stryker-js/jest-runner",
  "coverageAnalysis": "perTest",
  "timeoutMS": 2000,
  "timeoutFactor": 1.5,
  "maxTestRunnerReuse": 0,
  "disableBail": true,
  "ignoreStatic": true
}
